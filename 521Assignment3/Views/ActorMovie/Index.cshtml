@model IEnumerable<_521Assignment3.Models.ActorMovie>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color:purple">Actor/Movie Information</h1>

<p>
    <a asp-action="Create" style="color:purple">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="color:purple">
                @Html.DisplayNameFor(model => model.Actor)
            </th>
            <th style="color:purple">
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Actor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Title)
            </td>
            <td>
                <a style="color:purple" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a style="color:purple" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a style ="color:purple" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
