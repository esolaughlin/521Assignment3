@model IEnumerable<_521Assignment3.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: darkgoldenrod">Movie Information</h1>

<p>
    <a asp-action="Create" style="color: darkgoldenrod">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="color: darkgoldenrod">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th style="color: darkgoldenrod">
                @Html.DisplayNameFor(model => model.IMBDLink)
            </th>
            <th style="color: darkgoldenrod">
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th style="color: darkgoldenrod">
                @Html.DisplayNameFor(model => model.ReleaseYear)
            </th>
            <th style="color: darkgoldenrod">
                @Html.DisplayNameFor(model => model.Media)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMBDLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseYear)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.Media)
            </td>*@
                 <td>
                @if (item.Media != null)
                {
                   
                        <img width="100" height="100" src="@Url.Action("GetMovieMedia", "Movie", new {item.Id})" />
                 }
            </td>
            <td>
                    <a style="color: darkgoldenrod"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a style="color: darkgoldenrod" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a style="color: darkgoldenrod" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
